        printf("Enter the number of bowl of daal-\n");
        scanf("%d",&dal);
        printf("Enter the number of bowl of chawal-\n");
        scanf("%d",&rice);
        //bill
        char ch;
        printf("Do you want to enter more ?-y/n\n");
        scanf("%c",&ch);
        if (ch=='n'){
            break;
        }
        int billn=roti*15+dal*20+rice*20;
        printf("The bill amount is %d\n",billn);
        break;
    }
        case 2:{
        printf("Preparing South Indian Dish for you....\n");
        printf("Kindly enter the quantity too:\n");
        while (true){
        int Dosa=0,idli=0,Vada=0;
        printf("Enter the number of dosa-\n");
        scanf("%d",&Dosa);
        printf("Enter the number of bowl of idli-\n");
        scanf("%d",&idli);
        printf("Enter the number of bowl of vada-\n");
        scanf("%d",&Vada);
        //bill
        char ch;
        printf("Do you want to enter more ?-y/n\n");
        scanf("%c",&ch);
        if (ch=='n'){
            break;
        }
        int bills=Dosa*80+idli*50+Vada*50;
        printf("The bill amount is %d\n",bills);
        }
        break;
    }
        case 3:{
        printf("Preparing Chinese Dish for you....\n");
