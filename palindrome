//palindrome
#include <stdio.h>
#include <string.h>
int main(){
    char num[100];
    printf("Enter a text:");
    scanf("%s",num);
    char rev[100];
    int i=0;
    int len=strlen(num);
    for (i;i<len;i++){
        rev[i]=num[len-i-1];
    }
    if (rev==num){
        printf("The entered text is a palindrome");
    }
    else{
        printf("The entered text is not a palindrome");
    }
    return 0;
}
